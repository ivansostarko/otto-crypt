<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RadioGroup
            android:id="@+id/modeGroupText"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/rbPasswordT" android:checked="true" android:text="Password" />
            <RadioButton android:id="@+id/rbX25519T" android:text="X25519" />
            <RadioButton android:id="@+id/rbRawT" android:text="Raw" />
        </RadioGroup>

        <EditText
            android:id="@+id/etPasswordT"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etRecipientPubT"
            android:hint="Recipient public (base64/hex/raw)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etRawKeyT"
            android:hint="Raw 32-byte key (base64/hex/raw)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etPlaintext"
            android:hint="Plaintext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnEncryptText"
            android:text="Encrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:text="Ciphertext+Tag (base64)" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etCipherB64"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2" />

        <TextView android:text="Header (base64)" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etHeaderB64"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2" />

        <RadioGroup
            android:id="@+id/modeGroupDecText"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/rbPasswordTD" android:checked="true" android:text="Password" />
            <RadioButton android:id="@+id/rbX25519TD" android:text="X25519" />
            <RadioButton android:id="@+id/rbRawTD" android:text="Raw" />
        </RadioGroup>

        <EditText
            android:id="@+id/etPasswordTD"
            android:hint="Password for decrypt"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etSenderSecretTD"
            android:hint="Sender secret (base64/hex/raw)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etRawKeyTD"
            android:hint="Raw 32-byte key (base64/hex/raw)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDecryptText"
            android:text="Decrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPlainOut"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

    </LinearLayout>
</ScrollView>
